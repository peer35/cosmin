<p id="notice"><%= notice %></p>

<h1>Instruments</h1>
<p>
<%= link_to 'New Instrument', new_instrument_path %>
</p>
<%= alphabetical_paginate @alphaParams %>
<table class="table table-striped table-bordered">
  <thead>
<tr>
  <th>Name</th>
  <th>Reference</th>
  <th>doi</th>
  <th>pmid</th>
  <th>refurl</th>
  <th>PROQOLID</th>
  <th>ZUYD (NL)</th>
  <th>Url3</th>
  <th>#records</th>
  <th colspan="8"></th>
</tr>
</thead>

<tbody>
<% @instruments.each do |instrument| %>
  <tr>
    <td><a name=<%= instrument.id %>></a><%= instrument.name %></td>
    <td><%= instrument.reference %></td>
    <td><%= instrument.doi %></td>
    <td><%= instrument.pmid %></td>
    <td><%= instrument.refurl %></td>
    <td><%= instrument.url1 %></td>
    <td><%= instrument.url2 %></td>
    <td><%= instrument.url3 %></td>
    <td><%= instrument.records.count %></td>
    <td><%= link_to 'Edit', edit_instrument_path(instrument) %></td>
    <td>
    <% if instrument.records.count==0 %>
      <%= link_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br>

<%= link_to 'New Instrument', new_instrument_path %>

